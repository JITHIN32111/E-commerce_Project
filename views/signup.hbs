    if (name.match(/[`!@#$%^&*()_+\-=\[\]{};':"\\|,.<>\/?~]/)) {
        nameError.innerHTML = 'special charectord not allowed';
        nameError.style.color='red';
        return false;
    }
    if (name.match(/[1234567890]/)) {
        nameError.innerHTML = 'numbers not allowed';
